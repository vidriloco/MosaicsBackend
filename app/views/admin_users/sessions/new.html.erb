<h1 class="centered-text"><%= t('app.sections.access') %></h1>

<div id="acceso" class="centered">	
	<%= form_for(AdminUser.new, :as => :admin_user, :url => session_path(:admin_user)) do |f| %>
	  <div><%= f.email_field :email %><%= f.label :email %></div>
		<br/>
	  <div><%= f.password_field :password %><%= f.label :password %></div>
		<br/><br/>
	  <p class="submit centered-text">  <%= f.submit t('manager.views.sessions.new.login_button') %></p>
	<% end %>
</div>
