<div class="centered container">

	<h1><%= t('manager.views.index.title') %></h1>
	<br/>
	<table class="table table-striped table-bordered">
	  <tr>
		  <th><%= t('activerecord.attributes.manager.username') %></th>
	    <th><%= t('activerecord.attributes.manager.email') %></th>
	    <th><%= t('activerecord.attributes.manager.full_name') %></th>
	    <th><%= t('activerecord.attributes.manager.organization') %></th>
	    <th><%= t('activerecord.attributes.manager.job') %></th>
	  </tr>

	<% @managers.each do |manager| %>
	  <tr>
		  <td><%= manager.username %></td>
	    <td><%= manager.email %></td>
	    <td><%= manager.full_name %></td>
	    <td><%= manager.organization.name unless manager.organization.nil? %></td>
	    <td><%= manager.job || t('general.field.empty') %></td>
	
	    <td>
				<a href="<%= edit_admin_manager_path(manager) %>" class="btn">
				<i class="icon-edit"></i>  <%= t('general.actions.edit') %>
				</a>
				<a href="<%= admin_manager_path(manager) %>" data-method="delete" data-confirm="<%= t('manager.messages.confirmation.delete') %>" class="btn btn-danger">
				<i class="icon-remove"></i>  <%= t('general.actions.delete') %>
				</a>
			</td>
	  </tr>
	<% end %>
	</table>

	<br />

	<a href="<%= new_admin_manager_path %>" class="btn btn-primary">
	<i class="icon-plus"></i>  <%= t('general.actions.new') %>
	</a>

</div>