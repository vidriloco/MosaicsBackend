<%= form_for([:admin, @pollster]) do |f| %>
	<%= render :partial => 'shared/errors', :locals => {:model => @pollster} %>
	
	<br/>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :full_name %>
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>
  <div class="field">
    <%= f.label :birthday %>
    <%= f.date_select :birthday %>
  </div>
  <div class="field">
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :extension %>
    <%= f.number_field :extension %>
  </div>
  <div class="field">
    <%= f.label :cell_phone %>
    <%= f.text_field :cell_phone %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
