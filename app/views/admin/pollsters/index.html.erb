<h1>Listing pollsters</h1>
<br/>
<table class="table table-striped table-bordered">
  <tr>
		<th>Username</th>
    <th>Email</th>
    <th>Full name</th>
    <th>Uid</th>
    <th>Birthday</th>
    <th>Job</th>
    <th>Phone</th>
    <th>Extension</th>
    <th>Cell phone</th>
    <th>Organization</th>
    <th>Type</th>
    <th></th>
    <th></th>
  </tr>

<% @pollsters.each do |pollster| %>
  <tr>
	  <td><%= pollster.username %></td>
    <td><%= pollster.email %></td>
    <td><%= pollster.full_name %></td>
    <td><%= pollster.uid %></td>
    <td><%= pollster.birthday %></td>
    <td><%= pollster.job %></td>
    <td><%= pollster.phone %></td>
    <td><%= pollster.extension %></td>
    <td><%= pollster.cell_phone %></td>
    <td><%= pollster.organization_id %></td>
    <td><%= pollster.type %></td>
    <td><%= link_to 'Edit', edit_admin_pollster_path(pollster) %></td>
    <td><%= link_to 'Destroy', admin_pollster_path(pollster), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

