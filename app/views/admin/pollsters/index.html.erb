<h1><%= t('administration.sections.pollsters') %></h1>
<br/>
<table class="table table-striped table-bordered">
  <tr>
		<th><%= t('activerecord.attributes.pollster.username') %></th>
    <th><%= t('activerecord.attributes.pollster.email') %></th>
    <th><%= t('activerecord.attributes.pollster.full_name') %></th>
    <th><%= t('activerecord.attributes.pollster.phone') %></th>
    <th><%= t('activerecord.attributes.pollster.extension') %></th>
    <th><%= t('activerecord.attributes.pollster.cell_phone') %></th>
    <th></th>
  </tr>

<% @pollsters.each do |pollster| %>
  <tr>
	<td><%= pollster.username %></td>
    <td><%= pollster.email %></td>
    <td><%= pollster.full_name %></td>
    <td><%= pollster.phone %></td>
    <td><%= pollster.extension %></td>
    <td><%= pollster.cell_phone %></td>

	<td>
		<a href="<%= edit_admin_pollster_path(pollster) %>" class="btn">
		<i class="icon-edit"></i>  <%= t('general.actions.edit') %>
		</a>
		<a href="<%= admin_pollster_path(pollster) %>" data-method="delete" data-confirm="<%= t('pollster.messages.confirmation.delete') %>" class="btn btn-danger">
		<i class="icon-remove"></i>  <%= t('general.actions.delete') %>
		</a>
	</td>
  </tr>
<% end %>
</table>

<br />

<a href="<%= new_admin_pollster_path %>" class="btn btn-primary">
<i class="icon-plus"></i>  <%= t('general.actions.new') %>
</a>