<div class="centered container">

	<h1><%= t('admin_user.views.index.title') %></h1>
	<br/>
	<table class="table table-striped table-bordered">
	  <tr>
	    <th><%= t('activerecord.attributes.admin_user.email') %></th>
	    <th><%= t('activerecord.attributes.admin_user.name') %></th>
	  </tr>

	<% @admin_users.each do |admin_user| %>
	  <tr>
	    <td><%= admin_user.email %></td>
	    <td><%= admin_user.name %></td>
	    <td>
				<a href="<%= edit_admin_admin_user_path(admin_user) %>" class="btn">
				<i class="icon-edit"></i>  <%= t('general.actions.edit') %>
				</a>
				<a href="<%= admin_admin_user_path(admin_user) %>" data-method="delete" data-confirm="<%= t('admin_user.messages.confirmation.delete') %>" class="btn btn-danger">
				<i class="icon-remove"></i>  <%= t('general.actions.delete') %>
				</a>
			</td>
	  </tr>
	<% end %>
	</table>

	<br />

	<a href="<%= new_admin_admin_user_path %>" class="btn btn-primary">
	<i class="icon-plus"></i>  <%= t('general.actions.new') %>
	</a>

</div>