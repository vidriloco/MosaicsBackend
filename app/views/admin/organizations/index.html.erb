
<div class="centered container">
	<h1><%= t('administration.sections.organizations') %></h1>
	<br/>
	<table class="table table-striped table-bordered">
	  <tr>
	    <th><%= t('activerecord.attributes.organization.name') %></th>
	    <th><%= t('activerecord.attributes.organization.campaigns') %></th>
			<th><%= t('activerecord.attributes.organization.managers') %></th>
	    <th></th>
	  </tr>

	<% @organizations.each do |organization| %>
	  <tr>
	  <td><%= organization.name %></td>
		<td><%= organization.campaigns.count %></td>
		<td><%= organization.managers.count %> / <%= organization.general_managers.size %> </td>
		
		<td>
			<a href="<%= edit_admin_organization_path(organization) %>" class="btn">
			<i class="icon-edit"></i>  <%= t('general.actions.edit') %>
			</a>
			<a href="<%= admin_organization_path(organization) %>" data-method="delete" data-confirm="<%= t('organization.messages.confirmation.delete') %>" class="btn btn-danger">
			<i class="icon-remove"></i>  <%= t('general.actions.delete') %>
			</a>
		</td>
	  </tr>
	<% end %>
	</table>

	<br />

	<a href="<%= new_admin_organization_path %>" class="btn btn-primary">
	<i class="icon-plus"></i>  <%= t('general.actions.new') %>
	</a>
	
	
</div>
